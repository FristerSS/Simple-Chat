{
    "compilerOptions": {
      "module": "ES6",
      "target": "ES6",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./dist",
      "sourceMap": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "*": ["src/*"]
      }
    },
    "include": ["src/*.ts"],
    "exclude": ["node_modules"]
  }